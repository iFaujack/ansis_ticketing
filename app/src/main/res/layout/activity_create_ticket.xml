<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTicketActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Ticket"
            android:textSize="@dimen/_20sdp"
            android:fontFamily="@font/regular"
            android:textColor="@color/base_white"
            android:textAlignment="center"
            android:padding="@dimen/_20sdp"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:background="@drawable/curvetop"
        android:layout_marginTop="@dimen/_minus5sdp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16sdp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="@dimen/_3sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="1"
                android:background="@drawable/back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:paddingLeft="@dimen/_20sdp"
                android:text="Compose"
                android:textSize="@dimen/_15ssp"
                android:fontFamily="@font/regular"
                android:textStyle="bold"
                />
            <ImageButton
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:onClick="onClick"
                android:background="@drawable/delete"
                android:id="@+id/ct_ib_delete"/>
            <ImageButton
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:background="@drawable/add_ticket"
                android:id="@+id/ct_ib_sent"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/_16sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_16sdp"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:hint="From"
                    android:background="@drawable/curve_edittext">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@null"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/primary_text"
                        android:enabled="false"
                        android:id="@+id/ct_edt_from"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/curve_edittext">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Assign To"
                        android:fontFamily="@font/regular"
                        android:textSize="@dimen/_10ssp"
                        />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:id="@+id/ct_sp_assignto"
                        >
                    </Spinner>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/curve_edittext"
                    android:hint="Title">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/regular"
                        android:backgroundTint="@null"
                        android:id="@+id/ct_edt_title"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/curve_edittext"
                    android:hint="Message">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@null"
                        android:id="@+id/ct_edt_message"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/regular"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>





</RelativeLayout>